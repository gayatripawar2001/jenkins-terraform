pipeline {
agent any
tools {
  terraform 'Terraform'
}
 stages { 
  stage ('terraform version') { 
  steps {
   sh '''
    terraform --version
   ''' 
    }
    }
    
  stage ('terraform init') { 
  steps {
   sh '''
   cd terraform-test/
   terraform init
   ''' 
   }
   }
   
  stage ('terraform plan') { 
  steps {
   sh '''
   cd terraform-test/
   terraform plan -out=tfplan.out
   terraform show -json tfplan.out
   ''' 
   }
   }
   
 stage ('terraform apply') { 
  steps {
   sh '''
   cd terraform-test/
   terraform apply --auto-approve
   ''' 
   }
        post { 
        always { 
            cleanWs()
         }
        }
       }
  }
}
